# ================================
# MySQL Configuration for CTF Lab
# ================================
# Compatible with MySQL 8.0 on Debian (Docker Desktop / Linux)

[mysqld]
# -----------------
# Basic Configuration
# -----------------
user = mysql
port = 3306
bind-address = 0.0.0.0
datadir = /var/lib/mysql
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# -----------------
# Character Set
# -----------------
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# -----------------
# Security (Deliberately Weak for CTF)
# -----------------
# Allow remote connections
skip-name-resolve
# Enable local file loading (for LOAD_FILE challenges)
local-infile = 1
secure-file-priv = ""

# -----------------
# Logging (optional)
# Uncomment these AFTER first successful initialization
# -----------------
# general_log = 1
# general_log_file = /var/lib/mysql/general.log
# log_error = /var/lib/mysql/error.log
# slow_query_log = 1
# slow_query_log_file = /var/lib/mysql/slow.log
# long_query_time = 2

# -----------------
# Performance
# -----------------
max_connections = 100
connect_timeout = 10
wait_timeout = 600
max_allowed_packet = 64M

# -----------------
# InnoDB Settings
# -----------------
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_method = O_DIRECT

# -----------------
# Miscellaneous
# -----------------
sql_mode = ""
explicit_defaults_for_timestamp = true

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306